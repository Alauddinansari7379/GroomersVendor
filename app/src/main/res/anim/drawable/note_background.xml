<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Background color -->
    <solid android:color="#FFFFFF" /> <!-- White background -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" /> <!-- Smooth rounded edges -->

    <!-- Shadow effect (optional, works on Android 9.0+) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Border -->
    <stroke android:width="1dp" android:color="#DDDDDD" /> <!-- Light gray border -->
</shape>
