<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/back_arrow"
            android:src="@drawable/baseline_arrow_back_24" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginVertical="16dp"
            android:progress="100"
            android:progressTint="#4CAF50" />
        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Adding Services"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add at least one service now. Later you can add more, edit details, and group services into categories."
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp" />

        <!-- Service List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@android:color/darker_gray"
            android:showDividers="middle"
            android:dividerPadding="8dp">

            <!-- Example Service Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Remove Icon -->
                <ImageView

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/close"
                    android:contentDescription="Remove Service" />

                <!-- Service Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/tv_service_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female Haircut"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_service_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45min"
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- Price -->
                <TextView
                    android:id="@+id/tv_service_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$35.00"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingEnd="8dp" />

                <!-- Arrow Icon -->
                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_chevron_right_24"
                    android:contentDescription="Edit Service" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Remove Icon -->
                <ImageView
                    android:id="@+id/iv_remove_service"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/close"
                    android:contentDescription="Remove Service" />

                <!-- Service Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hair Extensions"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2h"
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- Price -->
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$35.00"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingEnd="8dp" />

                <!-- Arrow Icon -->
                <ImageView

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_chevron_right_24"
                    android:contentDescription="Edit Service" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <!-- Remove Icon -->
                <ImageView

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/close"
                    android:contentDescription="Remove Service" />

                <!-- Service Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female Haircut"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45min"
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- Price -->
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$35.00"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingEnd="8dp" />

                <!-- Arrow Icon -->
                <ImageView

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_chevron_right_24"
                    android:contentDescription="Edit Service" />
            </LinearLayout>

            <!-- Add Service -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/iv_add_service"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_add_24"

                    android:contentDescription="Add Service" />

                <TextView
                    android:id="@+id/tv_add_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add service"
                    android:textSize="16sp"
                    android:textColor="#FF6200EE"
                    android:paddingStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Continue Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/gradient_button"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/continue1"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            >

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
</ScrollView>
