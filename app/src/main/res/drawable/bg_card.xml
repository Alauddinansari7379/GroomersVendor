<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Shadow / elevation effect (only works on API 21+) -->
    <elevation android:value="6dp" />

    <!-- Border (optional) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Padding inside the card (optional, can also use layout padding) -->
    <!--
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
    -->

</shape>
