<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#E3F2FD" /> <!-- Light blue background for the circle -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#BBDEFB" /> <!-- Slightly darker blue for inner shadow/border effect -->
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#BBDEFB" /> <!-- Another layer for shadow effect -->
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#E3F2FD" /> <!-- Main background -->
        </shape>
    </item>
</layer-list>